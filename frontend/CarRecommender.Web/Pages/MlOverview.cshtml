@page
@model CarRecommender.Web.Pages.MlOverviewModel
@{
    ViewData["Title"] = "ML Evaluatie & Algoritme Vergelijking";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">ML Evaluatie & Cross-Validation</h1>
    
    <div class="row">
        <!-- Configuratie Sectie -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">‚öôÔ∏è Configuratie</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Aantal Folds:</label>
                        <input type="number" id="kfolds" class="form-control" value="3" min="2" max="10">
                        <small class="text-muted">2-10 folds (3 = snel, 5 = nauwkeurig)</small>
                    </div>

                    <button class="btn btn-success w-100 mb-2" onclick="runComparison()">
                        <span id="btnIcon">‚ñ∂Ô∏è</span>
                        <span id="btnText">Start Vergelijking</span>
                    </button>

                    <div id="loadingInfo" class="alert alert-info d-none mt-3">
                        <div class="spinner-border spinner-border-sm me-2"></div>
                        <small>Cross-validation loopt... (~1-2 min)</small>
                    </div>
                </div>
            </div>

            <!-- Metrics Uitleg -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">Metrics Uitleg</h6>
                </div>
                <div class="card-body small">
                    <p class="mb-2"><strong>Precision@10:</strong> % correcte auto's in top-10</p>
                    <p class="mb-2"><strong>Recall@10:</strong> % relevante auto's gevonden</p>
                    <p class="mb-2"><strong>F1-Score:</strong> Harmonic mean van P&R</p>
                    <p class="mb-0"><strong>Response Time:</strong> Snelheid per query (ms)</p>
                </div>
            </div>
        </div>

        <!-- Resultaten Sectie -->
        <div class="col-md-9">
            <div id="errorState" class="alert alert-danger d-none">
                <strong>Error:</strong> <span id="errorMessage"></span>
            </div>

            <div id="resultsSection" class="d-none">
                <!-- Best Performers Card -->
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">üèÜ Best Performing Algorithms</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6>Highest Precision</h6>
                                <h3 class="text-primary" id="bestPrecision">-</h3>
                            </div>
                            <div class="col-md-4">
                                <h6>Highest Recall</h6>
                                <h3 class="text-success" id="bestRecall">-</h3>
                            </div>
                            <div class="col-md-4">
                                <h6>Fastest</h6>
                                <h3 class="text-info" id="bestSpeed">-</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Vergelijkingstabel -->
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Algoritme Vergelijking</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Algoritme</th>
                                        <th>Precision@10</th>
                                        <th>Recall@10</th>
                                        <th>F1-Score</th>
                                        <th>Avg Response (ms)</th>
                                        <th>Test Cases</th>
                                    </tr>
                                </thead>
                                <tbody id="comparisonTableBody">
                                    <!-- Dynamisch gevuld -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header bg-dark text-white">
                                <h6 class="mb-0">üìà Accuracy Metrics</h6>
                            </div>
                            <div class="card-body">
                                <canvas id="accuracyChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header bg-dark text-white">
                                <h6 class="mb-0">Performance (Response Time)</h6>
                            </div>
                            <div class="card-body">
                                <canvas id="performanceChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Fold Details -->
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">üìã Fold Details (voor stabiliteitsanalyse)</h6>
                    </div>
                    <div class="card-body">
                        <div id="foldDetails">
                            <!-- Dynamisch gevuld -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const API_BASE_URL = 'http://localhost:5283';

        let accuracyChart = null;
        let performanceChart = null;

        async function runComparison() {
            // UI updates
            document.getElementById('btnIcon').textContent = '‚è≥';
            document.getElementById('btnText').textContent = 'Bezig...';
            document.getElementById('loadingInfo').classList.remove('d-none');
            document.getElementById('resultsSection').classList.add('d-none');
            document.getElementById('errorState').classList.add('d-none');

            const kfolds = parseInt(document.getElementById('kfolds').value);

            try {
                const response = await fetch(`${API_BASE_URL}/api/ml/compare`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ kFolds: kfolds })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || 'API call failed');
                }

                const data = await response.json();
                displayResults(data);

            } catch (error) {
                document.getElementById('errorState').classList.remove('d-none');
                document.getElementById('errorMessage').textContent = error.message;
            } finally {
                document.getElementById('btnIcon').textContent = '‚ñ∂Ô∏è';
                document.getElementById('btnText').textContent = 'Start Vergelijking';
                document.getElementById('loadingInfo').classList.add('d-none');
            }
        }

        function displayResults(data) {
            document.getElementById('resultsSection').classList.remove('d-none');

            // Best performers
            document.getElementById('bestPrecision').textContent = data.bestByPrecision.toUpperCase();
            document.getElementById('bestRecall').textContent = data.bestByRecall.toUpperCase();
            document.getElementById('bestSpeed').textContent = data.bestBySpeed.toUpperCase();

            // Vergelijkingstabel
            const tbody = document.getElementById('comparisonTableBody');
            tbody.innerHTML = '';

            const algorithms = Object.keys(data.results);
            algorithms.forEach(algo => {
                const result = data.results[algo];
                const row = `
                    <tr>
                        <td><strong>${algo.toUpperCase()}</strong></td>
                        <td>${(result.precisionAt10 * 100).toFixed(2)}%</td>
                        <td>${(result.recallAt10 * 100).toFixed(2)}%</td>
                        <td>${result.f1Score.toFixed(3)}</td>
                        <td>${result.averageResponseTimeMs.toFixed(1)}</td>
                        <td>${result.totalTestCases}</td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });

            // Fold details
            displayFoldDetails(data.results);

            // Charts
            createCharts(data.results);
        }

        function displayFoldDetails(results) {
            const container = document.getElementById('foldDetails');
            container.innerHTML = '';

            Object.keys(results).forEach(algo => {
                const result = results[algo];
                const foldRows = result.foldResults.map(fold => `
                    <tr>
                        <td>Fold ${fold.foldNumber}</td>
                        <td>${(fold.precision * 100).toFixed(2)}%</td>
                        <td>${(fold.recall * 100).toFixed(2)}%</td>
                        <td>${fold.f1Score.toFixed(3)}</td>
                        <td>${fold.testSize}</td>
                    </tr>
                `).join('');

                const table = `
                    <h6 class="mt-3">${algo.toUpperCase()}</h6>
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Fold</th>
                                <th>Precision</th>
                                <th>Recall</th>
                                <th>F1</th>
                                <th>Test Size</th>
                            </tr>
                        </thead>
                        <tbody>${foldRows}</tbody>
                    </table>
                `;
                container.innerHTML += table;
            });
        }

        function createCharts(results) {
            const algorithms = Object.keys(results);

            // Accuracy Chart
            if (accuracyChart) accuracyChart.destroy();
            const accuracyCtx = document.getElementById('accuracyChart').getContext('2d');
            accuracyChart = new Chart(accuracyCtx, {
                type: 'bar',
                data: {
                    labels: algorithms.map(a => a.toUpperCase()),
                    datasets: [
                        {
                            label: 'Precision@10',
                            data: algorithms.map(a => results[a].precisionAt10 * 100),
                            backgroundColor: 'rgba(54, 162, 235, 0.7)'
                        },
                        {
                            label: 'Recall@10',
                            data: algorithms.map(a => results[a].recallAt10 * 100),
                            backgroundColor: 'rgba(255, 99, 132, 0.7)'
                        },
                        {
                            label: 'F1-Score',
                            data: algorithms.map(a => results[a].f1Score * 100),
                            backgroundColor: 'rgba(75, 192, 192, 0.7)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: { display: true, text: 'Score (%)' }
                        }
                    }
                }
            });

            // Performance Chart
            if (performanceChart) performanceChart.destroy();
            const perfCtx = document.getElementById('performanceChart').getContext('2d');
            performanceChart = new Chart(perfCtx, {
                type: 'bar',
                data: {
                    labels: algorithms.map(a => a.toUpperCase()),
                    datasets: [{
                        label: 'Avg Response Time (ms)',
                        data: algorithms.map(a => results[a].averageResponseTimeMs),
                        backgroundColor: 'rgba(255, 206, 86, 0.7)'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Time (ms)' }
                        }
                    }
                }
            });
        }
    </script>
}
