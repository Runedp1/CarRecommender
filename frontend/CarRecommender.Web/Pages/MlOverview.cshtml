@page
@model CarRecommender.Web.Pages.MlOverviewModel
@{
    ViewData["Title"] = "ML Evaluatie & Algoritme Vergelijking";
}

<style>
    :root {
        --deep-purple: #4A148C;
        --purple-dark: #311B92;
        --purple-light: #7B1FA2;
        --purple-accent: #9C27B0;
    }

    .hero-header {
        background: linear-gradient(135deg, #000000 0%, var(--deep-purple) 50%, var(--purple-dark) 100%);
        color: white;
        padding: 3rem 0;
        margin: -1rem -15px 3rem -15px;
        border-radius: 0 0 30px 30px;
    }

    .hero-header h1 {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0;
    }

    .config-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(74, 20, 140, 0.1);
        border-left: 5px solid var(--deep-purple);
        margin-bottom: 1.5rem;
    }

    .config-card .card-header {
        background: linear-gradient(135deg, var(--deep-purple) 0%, var(--purple-accent) 100%);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 1rem 1.5rem;
        border: none;
    }

    .config-card .card-header h5,
    .config-card .card-header h6 {
        margin-bottom: 0;
        font-weight: 600;
    }

    .config-card .card-body {
        padding: 1.5rem;
    }

    .form-label {
        color: var(--deep-purple);
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.5rem;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: var(--deep-purple);
        box-shadow: 0 0 0 0.2rem rgba(74, 20, 140, 0.25);
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--deep-purple) 0%, var(--purple-accent) 100%);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(74, 20, 140, 0.3);
        background: linear-gradient(135deg, var(--purple-dark) 0%, var(--deep-purple) 100%);
    }

    .results-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(74, 20, 140, 0.1);
        margin-bottom: 1.5rem;
    }

    .results-card .card-header {
        background: linear-gradient(135deg, var(--deep-purple) 0%, var(--purple-accent) 100%);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 1rem 1.5rem;
        border: none;
    }

    .results-card .card-header h5,
    .results-card .card-header h6 {
        margin-bottom: 0;
        font-weight: 600;
    }

    .best-performers-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(74, 20, 140, 0.15);
        border-left: 5px solid var(--purple-accent);
        margin-bottom: 1.5rem;
    }

    .best-performers-card .card-header {
        background: linear-gradient(135deg, #ffd54f 0%, #ffb300 100%);
        color: #333;
        border-radius: 12px 12px 0 0;
        padding: 1rem 1.5rem;
        border: none;
    }

    .best-performers-card h3 {
        color: var(--deep-purple);
        font-weight: 700;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead {
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    }

    .table thead th {
        color: var(--deep-purple);
        font-weight: 600;
        border-bottom: 2px solid var(--deep-purple);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(74, 20, 140, 0.05);
    }

    .alert-info {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border: none;
        border-left: 4px solid #2196f3;
        color: #333;
        border-radius: 8px;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
        border: none;
        border-left: 4px solid #d32f2f;
        color: #333;
        border-radius: 8px;
    }

    .content-wrapper {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
        border-width: 0.15rem;
    }

    .fold-details h6 {
        color: var(--deep-purple);
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }

    .table-sm {
        font-size: 0.9rem;
    }

    @@media (max-width: 992px) {
        .hero-header h1 {
            font-size: 1.75rem;
        }
    }
</style>

<div class="hero-header">
    <div class="container-fluid">
        <div class="content-wrapper">
            <h1>ML Evaluatie & Cross-Validation</h1>
        </div>
    </div>
</div>

<div class="content-wrapper">
    <div class="row">
        <!-- Configuratie Sectie -->
        <div class="col-md-3">
            <div class="card config-card">
                <div class="card-header">
                    <h5>Configuratie</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Aantal Folds:</label>
                        <input type="number" id="kfolds" class="form-control" value="3" min="2" max="10">
                        <small class="text-muted">2-10 folds (3 = snel, 5 = nauwkeurig)</small>
                    </div>

                    <button class="btn btn-primary w-100 mb-2" onclick="runComparison()">
                        <span id="btnText">Start Vergelijking</span>
                    </button>

                    <div id="loadingInfo" class="alert alert-info d-none mt-3">
                        <div class="spinner-border spinner-border-sm me-2"></div>
                        <small>Cross-validation loopt... (~1-2 min)</small>
                    </div>
                </div>
            </div>

            <!-- Metrics Uitleg -->
            <div class="card config-card">
                <div class="card-header">
                    <h6>Metrics Uitleg</h6>
                </div>
                <div class="card-body small">
                    <p class="mb-2"><strong>Precision@10:</strong> % correcte auto's in top-10</p>
                    <p class="mb-2"><strong>Recall@10:</strong> % relevante auto's gevonden</p>
                    <p class="mb-2"><strong>F1-Score:</strong> Harmonic mean van P&R</p>
                    <p class="mb-0"><strong>Response Time:</strong> Snelheid per query (ms)</p>
                </div>
            </div>
        </div>

        <!-- Resultaten Sectie -->
        <div class="col-md-9">
            <div id="errorState" class="alert alert-danger d-none">
                <strong>Error:</strong> <span id="errorMessage"></span>
            </div>

            <div id="resultsSection" class="d-none">
                <!-- Best Performers Card -->
                <div class="card best-performers-card">
                    <div class="card-header">
                        <h5>Best Performing Algorithms</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6>Highest Precision</h6>
                                <h3 id="bestPrecision">-</h3>
                            </div>
                            <div class="col-md-4">
                                <h6>Highest Recall</h6>
                                <h3 id="bestRecall">-</h3>
                            </div>
                            <div class="col-md-4">
                                <h6>Fastest</h6>
                                <h3 id="bestSpeed">-</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Vergelijkingstabel -->
                <div class="card results-card">
                    <div class="card-header">
                        <h5>Algoritme Vergelijking</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>Algoritme</th>
                                        <th>Precision@10</th>
                                        <th>Recall@10</th>
                                        <th>F1-Score</th>
                                        <th>Avg Response (ms)</th>
                                        <th>Test Cases</th>
                                    </tr>
                                </thead>
                                <tbody id="comparisonTableBody">
                                    <!-- Dynamisch gevuld -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card results-card">
                            <div class="card-header">
                                <h6>Accuracy Metrics</h6>
                            </div>
                            <div class="card-body">
                                <canvas id="accuracyChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card results-card">
                            <div class="card-header">
                                <h6>Performance (Response Time)</h6>
                            </div>
                            <div class="card-body">
                                <canvas id="performanceChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Fold Details -->
                <div class="card results-card">
                    <div class="card-header">
                        <h6>Fold Details (voor stabiliteitsanalyse)</h6>
                    </div>
                    <div class="card-body fold-details">
                        <div id="foldDetails">
                            <!-- Dynamisch gevuld -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const API_BASE_URL = '@Model.ApiBaseUrl';

        let accuracyChart = null;
        let performanceChart = null;

        async function runComparison() {
            // UI updates
            document.getElementById('btnText').textContent = 'Bezig...';
            document.getElementById('loadingInfo').classList.remove('d-none');
            document.getElementById('resultsSection').classList.add('d-none');
            document.getElementById('errorState').classList.add('d-none');

            const kfolds = parseInt(document.getElementById('kfolds').value);

            try {
                const response = await fetch(`${API_BASE_URL}/api/ml/compare`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ kFolds: kfolds })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || 'API call failed');
                }

                const data = await response.json();
                displayResults(data);

            } catch (error) {
                document.getElementById('errorState').classList.remove('d-none');
                document.getElementById('errorMessage').textContent = error.message;
            } finally {
                document.getElementById('btnText').textContent = 'Start Vergelijking';
                document.getElementById('loadingInfo').classList.add('d-none');
            }
        }

        function displayResults(data) {
            document.getElementById('resultsSection').classList.remove('d-none');

            // Best performers
            document.getElementById('bestPrecision').textContent = data.bestByPrecision.toUpperCase();
            document.getElementById('bestRecall').textContent = data.bestByRecall.toUpperCase();
            document.getElementById('bestSpeed').textContent = data.bestBySpeed.toUpperCase();

            // Vergelijkingstabel
            const tbody = document.getElementById('comparisonTableBody');
            tbody.innerHTML = '';

            const algorithms = Object.keys(data.results);
            algorithms.forEach(algo => {
                const result = data.results[algo];
                const row = `
                    <tr>
                        <td><strong>${algo.toUpperCase()}</strong></td>
                        <td>${(result.precisionAt10 * 100).toFixed(2)}%</td>
                        <td>${(result.recallAt10 * 100).toFixed(2)}%</td>
                        <td>${result.f1Score.toFixed(3)}</td>
                        <td>${result.averageResponseTimeMs.toFixed(1)}</td>
                        <td>${result.totalTestCases}</td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });

            // Fold details
            displayFoldDetails(data.results);

            // Charts
            createCharts(data.results);
        }

        function displayFoldDetails(results) {
            const container = document.getElementById('foldDetails');
            container.innerHTML = '';

            Object.keys(results).forEach(algo => {
                const result = results[algo];
                const foldRows = result.foldResults.map(fold => `
                    <tr>
                        <td>Fold ${fold.foldNumber}</td>
                        <td>${(fold.precision * 100).toFixed(2)}%</td>
                        <td>${(fold.recall * 100).toFixed(2)}%</td>
                        <td>${fold.f1Score.toFixed(3)}</td>
                        <td>${fold.testSize}</td>
                    </tr>
                `).join('');

                const table = `
                    <h6>${algo.toUpperCase()}</h6>
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Fold</th>
                                <th>Precision</th>
                                <th>Recall</th>
                                <th>F1</th>
                                <th>Test Size</th>
                            </tr>
                        </thead>
                        <tbody>${foldRows}</tbody>
                    </table>
                `;
                container.innerHTML += table;
            });
        }

        function createCharts(results) {
            const algorithms = Object.keys(results);

            // Accuracy Chart
            if (accuracyChart) accuracyChart.destroy();
            const accuracyCtx = document.getElementById('accuracyChart').getContext('2d');
            accuracyChart = new Chart(accuracyCtx, {
                type: 'bar',
                data: {
                    labels: algorithms.map(a => a.toUpperCase()),
                    datasets: [
                        {
                            label: 'Precision@10',
                            data: algorithms.map(a => results[a].precisionAt10 * 100),
                            backgroundColor: 'rgba(74, 20, 140, 0.7)'
                        },
                        {
                            label: 'Recall@10',
                            data: algorithms.map(a => results[a].recallAt10 * 100),
                            backgroundColor: 'rgba(156, 39, 176, 0.7)'
                        },
                        {
                            label: 'F1-Score',
                            data: algorithms.map(a => results[a].f1Score * 100),
                            backgroundColor: 'rgba(123, 31, 162, 0.7)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: { display: true, text: 'Score (%)' }
                        }
                    }
                }
            });

            // Performance Chart
            if (performanceChart) performanceChart.destroy();
            const perfCtx = document.getElementById('performanceChart').getContext('2d');
            performanceChart = new Chart(perfCtx, {
                type: 'bar',
                data: {
                    labels: algorithms.map(a => a.toUpperCase()),
                    datasets: [{
                        label: 'Avg Response Time (ms)',
                        data: algorithms.map(a => results[a].averageResponseTimeMs),
                        backgroundColor: 'rgba(255, 193, 7, 0.7)'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Time (ms)' }
                        }
                    }
                }
            });
        }
    </script>
}
